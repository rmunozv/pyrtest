	<test nombre="Descarte">
		<about>
			Cuando has eliminado las alternativas incorrectas, <u>la que queda debe ser la correcta</u>.
		</about>
		<style>
			enunciado .biopic {
		    height: 200;
		    padding: 4;
		    margin: 10;
		    background-color: white;
				margin:5; 
				border:1px solid black; 
				height:90%;
				float:right;
				box-shadow: -6px 9px 16px 2px dimgray;
			}
